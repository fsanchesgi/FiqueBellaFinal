<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FiqueBella Estética a Domicílio</title>

    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Seu CSS -->
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-dark fixed-top" style="background-color:deeppink">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/silhueta_mulher_sentada_ved_inv1 (2).png" height="50" width="50">
                    <font face="Candara"><strong>FiqueBella Estética a Domicílio</strong></font>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar" aria-label="Toggle navigation" style="background-color:deeppink">
                    <span class="navbar-toggler-icon" style="color:black"></span>
                </button>
                <div class="offcanvas offcanvas-end text-bg-light" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel" style="background-color:black">
                    <div class="offcanvas-header text-light">
                        <font face="Candara"><h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel"><img src="~/images/Product.png" height="25" width="25" /> Menu</h5></font>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body" style="background-color:deeppink">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <font face="Candara">
                                <li class="nav-item d-sm-inline-flex flex-sm-row">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/house-door-fill (1).svg" height="25" width="25" /> Home</a>
                                </li>
                                <li class="nav-item d-sm-inline-flex flex-sm-row">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Galeria" asp-action="Index"><img src="~/images/camera-fill.svg" height="25" width="25" /> Galeria</a>
                                </li>
                                <li class="nav-item d-sm-inline-flex flex-sm-row">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="QuemSomos"><img src="~/images/book-fill.svg" height="25" width="25" /> Sobre</a>
                                </li>
                                <li class="nav-item d-sm-inline-flex flex-sm-row">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Sugestao" asp-action="Index"><img src="~/images/chat-left-dots-fill.svg" height="25" width="25" /> Sugestões</a>
                                </li>
                                @await Component.InvokeAsync("CategoriaProc")
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index"><img src="~/images/people-fill.svg" height="25" width="25" /> Administração</a>
                                }
                            </font>
                        </ul>
                        <form class="navbar-form navbar-right" asp-controller="Procedimento" asp-action="Search" method="get">
                            <font face="Candara">
                                <div class="form-group">
                                    <input type="text" class="form-control text-light" placeholder="Procurar procedimento" name="searchString" value="@ViewData["searchstring"]" />
                                </div>
                                <br />
                            </font>
                        </form>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />

    <style>
        body {
            background-image: url('/images/estetica-de-fundo-de-folha-em-aquarela-azul-temporada-de-inverno.jpg');
        }
    </style>

    <footer class="border-top footer text-muted" style="background-color:deeppink">
        <!-- Mantive seu código do footer igual -->
    </footer>

    <!-- JQuery e Bootstrap via CDN -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Seu JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
