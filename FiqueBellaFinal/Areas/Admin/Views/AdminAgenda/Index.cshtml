@model IEnumerable<FiqueBellaFinal.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Procedimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Procedimento.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Bairro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AgendaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AgendaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AgendaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
