@model FiqueBellaFinal.Models.Agenda

@{
    ViewData["Title"] = "Criar";
}

<h1>Adicione as informações para criar o agendamento.</h1>

<h4>Agenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Dia" class="control-label"></label>
                <div class="md-form md-outline input-with-post-icon datepicker">
                <input placeholder="Selecione a data" asp-for="Dia" type="date"id="example" class="form-control">
            </div>     
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
                <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
                <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />
                <input id="timepicker" width="276" asp-for="Horario" />
                    <script>
                        $('#timepicker').timepicker({
                            //use24hours: true,
                            uiLibrary: 'bootstrap4'
                        });
                    </script>
                @*<input asp-for="Horario" class="form-control" />*@
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcedimentoId" class="control-label"></label>
                <select asp-for="ProcedimentoId" class ="form-control" asp-items="ViewBag.ProcedimentoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><img src="~/images/arrow-return-left.svg" height="20" width="20" /> Retornar para lista</a>
</div>

