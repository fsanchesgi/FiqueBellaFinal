@model FiqueBellaFinal.Models.Procedimento

@{
    ViewData["Title"] = "Criar";
}

<h1>Adicione as informações para criar o procedimento.</h1>

<h4>Procedimento</h4>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="row">
    <div class="form-group col-md-1">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="QntdSessoes" class="control-label"></label>
        <input asp-for="QntdSessoes" class="form-control" />
        <span asp-validation-for="QntdSessoes" class="text-danger"></span>
    </div>
    <div class="form-group col-md-1">
        <label asp-for="Duracao" class="control-label"></label>
        <input asp-for="Duracao" class="form-control" />
        <span asp-validation-for="Duracao" class="text-danger"></span>
    </div>
    </div>
    <div class="form-group">
        <label asp-for="ImagemUrl" class="control-label"></label>
        <input asp-for="ImagemUrl" class="form-control" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagemThumbnailUrl" class="control-label"></label>
        <input asp-for="ImagemThumbnailUrl" class="form-control" />
        <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
    </div>
    <br />
    <div class="row">
        <div class="form-group form-check col-md-4">
            <label class="control-label">Marcar como Preferido?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="IsProcedimentoPreferido" /> @Html.DisplayNameFor(model => model.IsProcedimentoPreferido)
            </label>
        </div>
        <div class="form-group form-check col-md-4">
            <label class="control-label">Marcar como em Estoque?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
            </label>
        </div>
        <div class="form-group form-check col-md-4">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Adicionar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index"><img src="~/images/arrow-return-left.svg" height="20" width="20" /> Retornar para lista</a>
</div>

