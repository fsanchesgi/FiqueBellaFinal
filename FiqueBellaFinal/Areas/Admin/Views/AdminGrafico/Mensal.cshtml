<title>
    @ViewData["Title"] - Grafico de Atendimentos
</title>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<div id="chart_div" style="width: 900px; height: 500px;"></div>

<script type="text/javascript">

    google.charts.load('current', { packages: ['corechart', 'bar'] });
    google.charts.setOnLoadCallback(CarregaDados);

    function CarregaDados() {
        $.ajax({
            url: '@Url.Action("AgendaProcedimento", "AdminGrafico")',
            data: { dias: 30 },
            dataType: "json",
            type: "GET",
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function (data) {
                GraficoAtendimentoProcedimentos(data);
                return false;
            }
        });
        return false;
    }

    function GraficoAtendimentoProcedimentos(data) {
        var dataArray = [
            ['Procedimento', 'Quantidade', 'Valores(R$)']
        ];
        $.each(data, function (i, item) {
            dataArray.push([item.procedimentoNome, item.procedimentoQuantidade, item.procedimentoValorTotal]);
        });
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            title: 'Procedimentos - Vendas nos últimos 360 dias',
            chartArea: {
                width: '70%'
            },
            colors: ['#5202b5', '#d2a828'],
            hAxis: {
                title: 'Valor Total (em Reais)',
                minValue: 0
            },
            vAxis: {
                title: 'Procedimentos'
            }
        };
        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
        chart.draw(data, options);
    }
</script>