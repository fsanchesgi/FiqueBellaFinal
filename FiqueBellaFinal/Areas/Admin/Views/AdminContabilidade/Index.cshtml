@model IEnumerable<FiqueBellaFinal.Models.Contabilidade>


@{
    ViewData["Title"] = "Index";
}

<h1>Consulte aqui sua contabilidade</h1>


<p>
    <a class="text-dark" asp-action="Create"><img src="~/images/plus-circle-fill.svg" height="20" width="20" /> Criar novo registro de contabilidade</a>
</p>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="Relatorio">
            <fieldset>
                <legend><b>Relatório de Contabilidade por Período</b></legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-6 control-label">Data Inicial</label>
                    <div class="col-lg-4">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-6 control-label">Data Final</label>
                    <div class="col-lg-4">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EntradaSaida)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo.TipoDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntradaSaida.Descricao)
            </td>
            <td>
                    <a class="text-dark" asp-action="Edit" asp-route-id="@item.ContabilidadeId"><img src="~/images/pencil-fill.svg" height="20" width="20" /> Editar</a> |
                    <a class="text-dark" asp-action="Details" asp-route-id="@item.ContabilidadeId"><img src="~/images/view-list.svg" height="20" width="20" /> Detalhes</a> |
                    <a class="text-dark" asp-action="Delete" asp-route-id="@item.ContabilidadeId"><img src="~/images/trash3-fill.svg" height="20" width="20" /> Apagar</a>
            </td>
        </tr>
            
}
    </tbody>
</table>


