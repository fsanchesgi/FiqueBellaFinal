@model IEnumerable<FiqueBellaFinal.Models.Contabilidade>

@{
    decimal valor = 0;
}
<br />

<h2>Contabilidade por período</h2>

<nav class="navbar navbar-dark">
    <div class="container-fluid">
        <form class="navbar-form navbar-left">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-success">Filtrar</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EntradaSaida)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo.TipoDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EntradaSaida.Descricao)
                        </td>
                    </tr>
                    @if (item.EntradaSaidaId == 1)
                    {
                        valor = valor + item.Valor;
                    }
                    else
                    {
                        valor = valor - item.Valor;
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<h3 class="panel-title">Descritivo do valor mensal = R$ @valor</h3>
<a class="text-dark" asp-action="Index"><img src="~/images/arrow-return-left.svg" height="20" width="20" /> Retornar para lista</a>