<div>
    <a class="text-dark" asp-action="Edit" asp-route-id="@Model?.ContabilidadeId"><img src="~/images/pencil-fill.svg" height="20" width="20" /> Editar</a> |
    <a class="text-dark" asp-action="Index"><img src="~/images/arrow-return-left.svg" height="20" width="20" /> Retornar para lista</a>
