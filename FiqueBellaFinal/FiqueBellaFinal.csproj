    <PackageReference Include="Microsoft.AspNetCore.Authorization" Version="7.0.12" />

    <!-- Options pattern -->
    <PackageReference Include="Microsoft.Extensions.Options" Version="7.0.0" />
  </ItemGroup>

</Project>
